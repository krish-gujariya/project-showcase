<form action="/search-list?pg=1" method="post">
    <input type="text" name="sid" id="sid" placeholder="Enter Student id" >

    
    <% if (sm ==1) { %>
            
            <div>
                <input type="text" name="fname" id="fname" placeholder="Enter First Name" >
                <input type="text" name="lname" id="lname" placeholder="Enter Last namne" >
                <input type="text" name="city" id="city" placeholder="Enter City" >
                <select name="opt" id="opt" required>
                    <option value="OR">OR</option>
                    <option value="AND">AND</option>
                </select>
                
            </div>
            
            <% } %>
            <button type="submit"><i class="fa-solid fa-magnifying-glass"></i></button>            
        </form>

        <% if (sm ==0) { %>
            <a href="/search-list?sm=1&pg=<%= init %>">Show More</a>
            <% } else { %>
                <a href="/search-list?sm=0&pg=<%= init %>">Show Less</a>
                <% } %>
             